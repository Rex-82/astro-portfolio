---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import data from '../../public/repoData.json';
import type { Repository } from '../interfaces/github';
import PageTitle from '../components/PageTitle.astro';

//const response = await fetch('https://api.github.com/users/Rex-82/repos');
//const data = await response.json();
---

<Layout title="Simone Ferretti">
	<main>
		<PageTitle title="Projects" />
		<ul role="list" class="link-card-grid">
			{
				data
					?.filter(
						(repo: Repository) =>
							!repo.fork && repo.description !== null && repo.topics.length > 0,
					)
					.sort((a: Repository, b: Repository) =>
						b.updated_at.localeCompare(a.updated_at),
					)
					.map((repo: Repository) => (
						<Card
							title={repo.name}
							body={repo.description}
							homepage={repo.homepage}
							href={repo.html_url}
							topics={repo.topics}
						/>
					))
			}
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: #dddddd;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(35ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
