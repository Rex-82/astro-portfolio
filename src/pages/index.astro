---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<Layout title="Simone Ferretti">
	<main>
		<PageTitle title="Simone Ferretti" />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		text-wrap: nowrap;
	}

	@media screen and (max-width: 750px) {
		h1 {
			font-size: 3rem;
		}
	}
</style>
