---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<Layout
	title="Simone Ferretti"
	description="Full-Stack Web Developer skilled in React, Node.js, Go, Rust, JavaScript, TypeScript, and SQL. Crafting web applications and CLI tools."
>
	<main>
		<PageTitle title="Simone Ferretti" />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		text-wrap: nowrap;
	}

		h1 {
	@media screen and (max-width: 768px) {
			font-size: 3rem;
		}
	}
</style>
