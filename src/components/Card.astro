---
import GlobeIcon from '../components/icons/GlobeIcon.astro';

interface Props {
	title: string;
	body: string;
	href: string;
	homepage: string;
	topics: Array<string>;
}

const { href, title, body, homepage, topics } = Astro.props;
---

<li class="link-card">
	<a href={href} target="_blank" rel="noopener">
		<h2>
			{title}
		</h2>
		<p>
			{body.split('. ')[0]}
		</p>
		<div class="topics-list">
			{
				topics?.map((topic: string) => (
					<div class="topic pill center-content">
						<span>{topic}</span>
					</div>
				))
			}
		</div>
	</a>
	{homepage ?
		<div class="homepage-link pill center-content">
		<a class="center-content" href={homepage} target="_blank" rel="noopener">
				<GlobeIcon/>
		</a>
		</div>
	: <></>}
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: none;
		background-size: 400%;
		border-radius: 8px;
		background-position: 100%;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.2);
		cursor: pointer;
		position: relative;
		scale: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1),
			background-size 1s cubic-bezier(0.22, 1, 0.36, 1),
			scale 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: #cccccc;
		background: var(--background-color);
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-decoration: underline;
		text-decoration-thickness: 1px;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: grey;
	}
	.link-card:is(:hover) {
		background-position: 0;
		background-image: var(--accent-gradient);
		scale: 102%;
	}
	.link-card:is(:hover) h2 {
		color: rgb(var(--accent-light));
	}
	.link-card:is(:hover) p,
	.link-card:is(:hover) .homepage-link:not(:is(:hover)) svg,
	.link-card:is(:hover) span {
		color: rgb(var(--accent-light-dimmed));
	}
	.link-card:is(:hover) .pill:not(.homepage-link),
	.link-card:is(:hover) .homepage-link:not(:is(:hover)) {
		background-color: rgb(var(--accent-light-dimmed), 0.2);
	}
	.topics-list {
		display: flex;
		flex-wrap: wrap;
		margin-top: 1rem;
		row-gap: 0.5rem;
	}
	.pill {
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.2);
		padding: 0.375rem 0.75rem;
		margin: 0 0.125rem;
		border-radius: 5rem;
	}
	.pill > * {
		margin: 0;
		padding: 0;
		color: grey;
		font-size: 0.875rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.homepage-link {
		position: absolute;
		right: 10px;
		top: 10px;
		padding: 0;
		margin: 0;
		scale: 100%;
		width: 44px;
		height: 44px;
		transition: background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1),
			scale 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.pill > a {
		padding: 0.5rem;
	}
	.link-card:has(.homepage-link:is(:hover)) {
		background-size: 200%;
	}
	.center-content {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.homepage-link:is(:hover) {
		background-color: #dddddd;
		scale: 110%;
	}
</style>
