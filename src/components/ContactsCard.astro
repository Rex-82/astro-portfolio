---
import GithubIcon from '../components/icons/GithubIcon.astro';
import DiscordIcon from '../components/icons/DiscordIcon.astro';
import LinkedinIcon from '../components/icons/LinkedinIcon.astro';
import EmailIcon from '../components/icons/EmailIcon.astro';

const socialIcons = [GithubIcon, DiscordIcon, LinkedinIcon, EmailIcon];
---

<li class="contacts-card">
	<h1 class="center-content">Contact informations</h1>
	<div class="socials-grid">
		{
			socialIcons.map((SocialIcon) => (
				<div class="social-link pill center-content">
					<a class="center-content" target="_blank" rel="noopener">
						<SocialIcon />
					</a>
				</div>
			))
		}
	</div>
</li>
<style>
	.contacts-card {
		display: flex;
		flex-direction: column;
		padding: 1rem;
		border-radius: 7px;
		border: 1px solid rgba(var(--accent-light), 0.1);
	}
	h1 {
		font-size: 1rem;
		font-weight: normal;
		margin-bottom: 1rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: grey;
	}

	.socials-grid {
		display: flex;
		justify-content: center;
		align-items: center;
		column-gap: 3rem;
		margin: 0 auto;
		padding: 1rem 0;
	}

	.pill {
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		padding: 0.375rem 0.75rem;
		margin: 0 0.125rem;
		border-radius: 5rem;
	}
	.pill > * {
		margin: 0;
		padding: 0;
		color: grey;
		font-size: 0.875rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.social-link {
		padding: 0;
		margin: 0;
		width: 50px;
		height: 50px;
		transition:
			background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1),
			scale 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.pill > a {
		padding: 0.5rem;
	}
	.center-content {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.social-link:is(:hover) {
		background-color: #dddddd;
		scale: 110%;
	}
</style>
