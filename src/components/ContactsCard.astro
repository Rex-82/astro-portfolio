---
import GithubIcon from '../components/icons/GithubIcon.astro';
import DiscordIcon from '../components/icons/DiscordIcon.astro';
import LinkedinIcon from '../components/icons/LinkedinIcon.astro';
import EmailIcon from '../components/icons/EmailIcon.astro';

const socials = [
	{
		name: 'Github',
		icon: GithubIcon,
		url: 'https://github.com/Rex-82',
	},
	{
		name: 'Discord',
		icon: DiscordIcon,
		url: 'https://discord.com/users/406817041157193728',
	},
	{
		name: 'Linkedin',
		icon: LinkedinIcon,
		url: 'https://www.linkedin.com/in/simoneferretti',
	},
	{
		name: 'Email',
		icon: EmailIcon,
		url: 'mailto:simone.ferretti.work@gmail.com',
	},
];
---

<li class="contacts-card">
	<h1 class="center-content">Contact informations</h1>
	<div class="socials-grid">
		{
			socials.map((social) => (
				<div class="social-container center-content">
					<div class="social-link center-content">
						<a
							class="center-content"
							target="_blank"
							rel="noopener"
							href={social.url}
						>
							<social.icon />
						</a>
					</div>
					<span class="social-name">{social.name}</span>
				</div>
			))
		}
	</div>
</li>
<style>
	.contacts-card {
		display: flex;
		flex-direction: column;
		padding: 1rem;
		border-radius: 7px;
		border: 1px solid rgba(var(--accent-light), 0.1);
	}

	h1 {
		font-size: 1rem;
		font-weight: normal;
		margin-bottom: 1rem;
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: grey;
	}

	.socials-grid {
		display: flex;
		justify-content: center;
		align-items: center;
		column-gap: 3rem;
		margin: 0 auto;
		padding: 1rem 0;
	}

	.social-container {
		position: relative;
	}

	.social-link {
		padding: 0;
		margin: 0;
		width: 50px;
		height: 50px;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		border-radius: 5rem;
		transition:
			background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1),
			scale 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.social-link > a {
		margin: 0;
		padding: 0.5rem;
		color: grey;
		font-size: 0.875rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.social-link:is(:hover) {
		background-color: #dddddd;
		scale: 110%;
	}

	.social-link:is(:hover) > a {
		color: #222222;
	}

	.center-content {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.social-name {
		opacity: 0;
		font-size: 0.875rem;
		position: absolute;
		bottom: -1.5em;
		transition:
			opacity 0.6s cubic-bezier(0.22, 1, 0.36, 1),
			bottom 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.social-link:hover ~ .social-name {
		opacity: 100;
		bottom: -1.875em;
	}
</style>
